<% content_for :page_title, @post.title %>

<div class="container">
<div class="row">

  <div class="col-md-8">

    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-info panel-main">
          <div class="panel-heading">
            <%= link_to topic_path(@topic), class: 'text-white' do %>
              <%= glyphicon 'chevron-left' %><%= "#{t(:back_to_topic)}: #{@topic.title}" %>
            <% end %>
          </div>
          <div class="panel-body">
            <h4><%= @post.title %><small class="text-primary pull-right"> <%= time_ago_in_words @post.created_at %> | <%= @post.user.nickname %></small></h4>

            <% if user_signed_in? and ( current_user.is_admin or @post.user == current_user ) %>
              <p class="text-right">
              <%= link_to t(:delete), @post, method: 'delete', data: { confirm: t(:confirm_to_delete) } %>
              |
              <%= link_to t(:edit), edit_post_path(@post) %>
              </p>
            <% end %>
            <p>
            <%= @post.content_parsed.html_safe %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12 text-center">
        <%= will_paginate @sub_posts %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-default">

          <% if @new_post.present? %>
            <div class="panel-body text-right">
              <a id="linkNewPost" data-toggle="collapse" href="#collapseNewPost" aria-expanded="true" aria-controls="collapseNewPost">
                <%= glyphicon 'pencil' %><%= t(:new_reply) %>
              </a>
            </div>

            <div id="collapseNewPost" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
              <div class="panel-body">
                <%= form_for @new_post, remote: true do |f| %>
                  <%= f.hidden_field :topic_id %>
                  <%= f.hidden_field :parent_id %>
                  <div class="form-group">
                    <%= f.text_area :content, class: 'form-control with-at-support', id: 'newSubPostInputContent', placeholder: t("content"), 'data-provide' => "markdown" %>
                  </div>
                  <div class="form-group text-right">
                    <%= f.submit t("submit"), class: "btn btn-sm btn-default", id: 'newSubPostSubmit' %>
                  </div>
                <% end %>
              </div>
            </div>
          <% else %>
            <% if !user_signed_in? %>
              <div class="panel-body text-center text-muted">
                <%= t(:login_to_create_reply) %>
              </div>
            <% end %>
          <% end %>

          <ul class="list-group">
            <% if @sub_posts.length != 0 %>
              <% @sub_posts.each_with_index do |post, index| %>
                <li class="list-group-item" id="sub_post_<%= post.id %>">
                  <h4 class="list-group-item-heading">
                    <small class="text-info">
                      <%= "##{@sub_posts.offset + index + 1}" %>&nbsp;
                      <span class="text-primary">
                        <%= post.user.nickname %>&nbsp; | &nbsp;<%= time_ago_in_words post.created_at %>
                      </span>
                    </small>
                    <span class="text-right pull-right">
                      <small>
                        <% if user_signed_in? and ( current_user.is_admin or post.user == current_user ) %>
                          <%= link_to t(:delete), post, method: 'delete', data: { confirm: t(:confirm_to_delete) } %>
                          |
                          <%= link_to t(:edit), edit_post_path(post) %>
                          |
                        <% end %>
                        <% if user_signed_in? %>
                          <%= link_to t(:reply), "#", "class" => 'reply-link', "data-user-id" => post.user_id, "data-user-nickname" => post.user.try(:nickname) %>
                        <% end %>
                      </small>
                    </span>
                  </h4>
                  <p class="list-group-item-text"><%= post.content_parsed.html_safe %></p>
                </li>
              <% end %>
            <% else %>
              <li class="list-group-item text-center"><%= t(:no_replies) %></li>
            <% end %>
          </ul>

          <% if @new_post.present? and @sub_posts.count > 3 %>
            <div class="panel-body text-right">
              <a id="alt-new-post" href="#">
                <%= glyphicon 'pencil' %><%= t(:new_reply) %>
              </a>
            </div>
          <% end %>

        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12 text-center">
        <%= will_paginate @sub_posts %>
      </div>
    </div>

  </div>

  <div class="col-md-4">
    <%= render 'shared/chatbox' %>
  </div>

</div>
</div>
